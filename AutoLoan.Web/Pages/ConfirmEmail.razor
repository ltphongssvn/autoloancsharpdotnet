@page "/confirm-email"
@inject NavigationManager Nav

<PageTitle>Email Confirmation - Auto Loan</PageTitle>

<div class="confirm-page">
    <div class="confirm-card">
        <h2>Email Confirmation</h2>

        @if (status == "loading")
        {
            <div class="status-section">
                <div class="spinner"></div>
                <p>Confirming your email...</p>
            </div>
        }
        else if (status == "success")
        {
            <div class="status-section">
                <div class="icon-success">&#10004;</div>
                <div class="alert-success">@message</div>
                <button class="btn-primary" @onclick='() => Nav.NavigateTo("/login")'>Go to Login</button>
            </div>
        }
        else if (status == "error")
        {
            <div class="status-section">
                <div class="icon-error">&#10008;</div>
                <div class="alert-error">@message</div>
                <div class="button-row">
                    <a href="/login" class="btn-outline">Back to Login</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .confirm-page {
        min-height: 100vh; display: flex; align-items: center; justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .confirm-card {
        background: white; width: 100%; max-width: 500px; margin: 1rem;
        border-radius: 8px; padding: 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.15); text-align: center;
    }
    .confirm-card h2 { color: #333; margin-bottom: 1.5rem; }
    .status-section { margin: 2rem 0; }
    .spinner {
        width: 50px; height: 50px; border: 4px solid #e5e7eb; border-top-color: #667eea;
        border-radius: 50%; animation: spin 0.8s linear infinite; margin: 0 auto 1rem;
    }
    @@keyframes spin { to { transform: rotate(360deg); } }
    .icon-success { font-size: 3rem; color: #16a34a; margin-bottom: 1rem; }
    .icon-error { font-size: 3rem; color: #dc2626; margin-bottom: 1rem; }
    .alert-success {
        background: #f0fdf4; color: #16a34a; border: 1px solid #bbf7d0;
        padding: 0.75rem; border-radius: 4px; margin-bottom: 1.5rem;
    }
    .alert-error {
        background: #fef2f2; color: #dc2626; border: 1px solid #fecaca;
        padding: 0.75rem; border-radius: 4px; margin-bottom: 1.5rem;
    }
    .btn-primary {
        background: #667eea; color: white; border: none; padding: 0.75rem 2rem;
        font-size: 1rem; border-radius: 4px; cursor: pointer; font-weight: 600;
    }
    .btn-primary:hover { background: #5a6fd6; }
    .btn-outline {
        border: 2px solid #667eea; color: #667eea; padding: 0.6rem 1.5rem;
        border-radius: 4px; text-decoration: none; font-weight: 600;
    }
    .button-row { display: flex; gap: 1rem; justify-content: center; }
</style>

@code {
    private string status = "loading", message = "";

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(Nav.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var token = query["confirmation_token"] ?? "";

        if (string.IsNullOrEmpty(token))
        {
            status = "error";
            message = "Invalid confirmation link. Please check your email for the correct link.";
            return;
        }
        try
        {
            // TODO: Call confirmation API
            await Task.Delay(500);
            status = "success";
            message = "Your email has been confirmed successfully. You can now log in.";
        }
        catch (Exception ex)
        {
            status = "error";
            message = ex.Message;
        }
    }
}
